---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | 10xCards</title>
    <link rel="stylesheet" href="/styles/globals.css" />
  </head>
  <body class="min-h-screen bg-background">
    <main class="relative">
      <slot />
    </main>
  </body>
</html>
