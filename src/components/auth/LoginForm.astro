---
import { Card, CardContent, CardDescription, CardFooter, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";

interface Props {
  redirectUrl?: string;
}

const { redirectUrl = "/dashboard" } = Astro.props;
---

<Card className="w-full">
  <CardHeader>
    <CardTitle>Zaloguj się do 10xCards</CardTitle>
    <CardDescription>
      Kontynuuj naukę z wykorzystaniem spaced repetition
    </CardDescription>
  </CardHeader>
  <CardContent>
    <p class="text-sm text-muted-foreground mb-4">
      Kliknij przycisk poniżej, aby kontynuować.
    </p>
  </CardContent>
  <CardFooter>
    <a href={redirectUrl} class="w-full">
      <Button className="w-full">Kontynuuj</Button>
    </a>
  </CardFooter>
</Card>
