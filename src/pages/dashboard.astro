---
import BaseLayout from "../layouts/BaseLayout.astro";
import AstroAuthGuard from "../components/auth/AstroAuthGuard.astro";
import DashboardContent from "../components/dashboard/DashboardContent";

// Disable pre-rendering to ensure auth state is always current
export const prerender = false;
---

<AstroAuthGuard>
  <BaseLayout title="Dashboard">
    <div class="container mx-auto py-8 px-4">
      <h1 class="text-3xl font-bold tracking-tight mb-6">Dashboard</h1>
      
      <!-- Use client-side React component for interactive dashboard elements -->
      <DashboardContent client:load />
    </div>
  </BaseLayout>
</AstroAuthGuard>